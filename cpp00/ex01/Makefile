# ╔════════════════════════════════════════════════════════════════════════╗
# ║                       Makefile for C++ exercises                       ║
# ╚════════════════════════════════════════════════════════════════════════╝
# ╭────────────────────────────────────╮
# │              CXX part              │
# ╰────────────────────────────────────╯
CPP 		= c++
CPPFLAGS	= -Wall -Wextra -Werror -I. -std=c++98
NAME		= PhoneBook
COMPILE		= $(CPP) $(CPPFLAGS)
# ╭────────────────────────────────────╮
# │               OPTIONS              │
# ╰────────────────────────────────────╯
RM			= rm -rf
# ╭────────────────────────────────────╮
# │               SOURCES              │
# ╰────────────────────────────────────╯
SRCS		= Contact.cpp \
			  PhoneBook.cpp \
			  main.cpp
# ╭────────────────────────────────────╮
# │               OBJECTS              │
# ╰────────────────────────────────────╯
OBJS		= $(SRCS:.cpp=.o)
# ╭────────────────────────────────────╮
# │                DEPS                │
# ╰────────────────────────────────────╯
DEPS		= Contact.hpp \
			  PhoneBook.hpp
# ╭────────────────────────────────────╮
# │              COMMANDS              │
# ╰────────────────────────────────────╯
all: $(NAME)

$(NAME): $(OBJS)
	$(COMPILE) $(OBJS) -o $(NAME)

%.o: %.cpp $(DEPS)
	$(COMPILE) -c $< -o $@

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: clean all fclean re